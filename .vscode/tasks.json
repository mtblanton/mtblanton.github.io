{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Sass Watch",
            "command": "node-sass --watch ./Stylesheets/index.sass ./Stylesheets/index.css",
            "type": "shell",
            "group": "build",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "taskName": "AutoPrefixer Build",
            "command": "postcss ./Stylesheets/index.css --use autoprefixer -o ./Stylesheets/index.css",
            "type": "shell",
            "group": "build"
        },
        {
            "type": "npm",
            "script": "start",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}